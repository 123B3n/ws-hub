{
  "server": {
    "httpPort": 8080,
    "httpsPort": 8443,
    "host": "0.0.0.0"
  },
  "heartbeat": {
    "enabled": true,
    "interval": 30000,
    "timeout": 5000,
    "maxMissed": 5
  },
  "security": {
    "corsOrigins": ["https://yourdomain.com"],
    "disableCors": false,
    "maxMessageSize": 102400,
    "rateLimit": {
      "enabled": true,
      "maxRequestsPerMinute": 300
    }
  },
  "logging": {
    "level": "warn",
    "logToFile": false,
    "logDir": "logs",
    "logClientEvents": false
  },
  "notifications": {
    "maxFollowerNotifications": 10000,
    "throttleMs": 0,
    "maxContentSize": 10240
  },
  "customSettings": {
    "appName": "WebSocket Server",
    "appVersion": "1.0.1",
    "adminContact": "admin@example.com"
  }
}
